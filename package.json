{
  "name": "@nikolay-borzov/torrent-clean",
  "version": "2.0.0",
  "description": "Deletes files that are not listed in the selected torrent file",
  "keywords": [
    "torrent",
    "node",
    "cli"
  ],
  "author": "Nikolay Borzov <nikolay.n.borzov@gmail.com>",
  "license": "MIT",
  "type": "module",
  "main": "./lib/api.js",
  "exports": "./lib/api.js",
  "bin": {
    "torrent-clean": "bin/torrent-clean.js",
    "tc": "bin/torrent-clean.js"
  },
  "engines": {
    "node": ">=12"
  },
  "preferGlobal": true,
  "repository": "https://github.com/nikolay-borzov/torrent-clean.git",
  "bugs": {
    "url": "https://github.com/nikolay-borzov/torrent-clean/issues"
  },
  "homepage": "https://github.com/nikolay-borzov/torrent-clean#readme",
  "scripts": {
    "test": "ava",
    "test:watch": "ava --watch",
    "test:update-snapshot": "ava --update-snapshots",
    "test:coverage:collect": "c8 --include lib/** --all --reporter=text --reporter=lcov ava",
    "test:coverage:view": "open-cli coverage\\lcov-report\\index.html",
    "test:coverage:ci": "c8 --reporter=lcov ava",
    "lint": "eslint \"**/*.*\"",
    "lint-staged": "lint-staged"
  },
  "files": [
    "bin",
    "lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "singleQuote": true,
    "semi": false
  },
  "ava": {
    "files": [
      "tests/*.test.js"
    ],
    "verbose": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-case": [
        2,
        "always",
        "sentence-case"
      ],
      "subject-case": [
        2,
        "always",
        "sentence-case"
      ]
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "chalk": "^4.1.1",
    "cosmiconfig": "^7.0.0",
    "delete-empty": "^3.0.0",
    "enquirer": "^2.3.6",
    "memory-chunk-store": "^1.3.2",
    "minimist": "^1.2.5",
    "picomatch": "^2.2.3",
    "readdirp": "^3.6.0",
    "webtorrent": "^0.118.0",
    "yaml": "^1.10.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "ava": "^3.15.0",
    "c8": "^7.7.2",
    "create-temp-directory": "^1.1.1",
    "create-torrent": "^4.7.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-prettier-standard": "^4.0.1",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-ava": "^12.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^34.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-unicorn": "^32.0.1",
    "husky": "^4.3.8",
    "lint-staged": "^11.0.0",
    "open-cli": "^6.0.1",
    "prettier": "^2.3.0",
    "prettier-config-standard": "^4.0.0"
  }
}
